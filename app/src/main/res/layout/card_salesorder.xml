<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"

    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:id="@+id/salesorderCardView">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/idTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:text="N| Pedido" />
        <TextView
            android:id="@+id/userIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/idTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:text="Usuario" />
        <TextView
            android:id="@+id/fullnameIdTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/userIdTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:text="Nombre"/>
        <TextView
            android:id="@+id/orderdateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/fullnameIdTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:text="Fecha Pedido" />
        <TextView
            android:id="@+id/waittimerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@id/orderdateTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:text="Tiempo Espera"/>
        <TextView
            android:id="@+id/anularTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/waittimerTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:text="ANULAR" />
        <TextView
            android:id="@+id/atendidoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            app:layout_constraintTop_toBottomOf="@+id/waittimerTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:text="ATENDIDO"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>